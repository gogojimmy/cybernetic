.row
  .span3
    = render_cell :widget, :categories_sidebar
  .span9
    .row
      .span6
        = image_tag @product.feature_image(:large)
      .span3
        h1= @product.name
        = simple_format @product.description
    .row
      .span9
        ul.nav.nav-pills#product-tab
          - if @product.test.present?
            li
              a href="#test" data-toggle="pill" 產品測試報告
          - if @product.knowledge.present?
            li
              a href="#knowledge" data-toggle="pill" 產品小知識
          - if @product.feature.present?
            li
              a href="#feature" data-toggle="pill" 產品特色
          - if @product.feature.present?
            li
              a href="#spec" data-toggle="pill" 產品規格
        .tab-content
          .tab-pane.fade.in#test
            = simple_format @product.test
          .tab-pane.fade.in#knowledge
            = simple_format @product.knowledge
          .tab-pane.fade.in#feature
            = simple_format @product.feature
          .tab-pane.fade.in#spec
            = simple_format @product.spec
